@model Appointment
@{
    Layout = "_Layout";
    ViewData["Title"] = "New Appointment";
}

@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Edit Appointment</h1>

<div class="w-50">
    <table class="table table-secondary mt-2">
        <thead>
            <tr class="text-center">
                <th>#</th>
                <th>Date</th>
                <th>Time</th>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            <tr class="text-center">
                <td class="col-2">@Model.AppointmentId</td>
                <td class="col-2">@Model.dateTime.ToShortDateString()</td>
                <td class="col-2">@Model.dateTime.ToShortTimeString()</td>
                <td class="col-2">@Model.Customer.Username</td>
            </tr>
        </tbody>
    </table>
</div>

<form asp-action="Edit" method="post" class="mt-2 bg-dark-subtle p-2">
    <div asp-validation-summary="All" class="fw-bold text-danger"></div>
    <div class="row">
        <span class="fw-bold text-primary">(All Appointments must be placed 1 day in advance!)</span>
        <div class="col-1 justify-content-center d-flex">
            <label asp-for="dateTime" class="form-label fw-bold align-self-center">Date Time:</label>
        </div>
        <div class="col-4">
            <input asp-for="dateTime" placeholder="Customer Name" class="form-control" />
        </div>
    </div>
    <input type="hidden" asp-for="CustomerId"  />
    <input type="hidden" asp-for="AppointmentId"  />
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
    <a asp-action="Index" asp-area="Admin" class="btn btn-secondary mt-2">Cancel</a>
</form>